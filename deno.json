{
  "name": "@invidious/downloader",
  "version": "0.1.0",
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-write --allow-env --allow-run src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run src/main.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env",
    "test:watch": "deno test --watch --allow-net --allow-read --allow-write --allow-env",
    "test:coverage": "deno test --allow-net --allow-read --allow-write --allow-env --coverage=coverage",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/main.ts"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/testing": "jsr:@std/testing@^1",
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/log": "jsr:@std/log@^0.224",
    "postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "sqlite": "https://deno.land/x/sqlite@v3.9.1/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
